{% extends 'test.html.twig' %}

{% block title %}New Club{% endblock %}

{% block body %}
    <h1>Ajouter un nouveau club</h1>
    <div style="display: flex;align-items: center;justify-content: center; margin-top: 40px; padding: 30px;">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Ajouter  Club</h5>

                <!-- General Form Elements -->
                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Nom Club</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nom_club,{ 'attr':{'class':'form-control'}})   }}
                        {{ form_errors(form.nom_club,{ 'attr':{'class':'text-danger'}})   }}
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputDate" class="col-sm-2 col-form-label">Date Creation</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date_creation,{ 'attr':{'class':'form-control'}})   }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Nombre membres</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nbr_members,{ 'attr':{'class':'form-control'}})   }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Image Club</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.imageclb,{ 'attr':{'class':'form-control'}})   }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Club Owner</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.club_owner,{ 'attr':{'class':'form-control'}})   }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Type Club</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.access,{ 'attr':{'class':'form-control'}})   }}
                    </div>
                </div>




                <div class="row mb-3">
                    <button class="btn btn-success btn-icon-split"><span class="icon text-white-50">
                                            <i class="fas fa-check"></i>
                                        </span>
                        {{ button_label|default('Enregistrer') }}</button>

                </div>
            </div>
            {{ form_end(form) }}


        </div>
    </div>
   <B> <a style="margin-left: 360 px;" href="{{ path('app_club_index') }}">Retour </a></B>

{% endblock %}
