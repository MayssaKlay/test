{% extends 'admin.html.twig' %}

{% block title %}Evenement Search{% endblock %}

{% block body %}
    <form method="POST">
        <input type="text" name="nom">
        <input type="submit" value="Rechercher">
    </form>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des événements</h5>
                        <a href="{{ path('evenement_new') }}">Ajouter un événement</a><br>
                        <!-- Table with stripped rows -->
                        <br><table class="table datatable">
                            <thead>
                            <tr>
                                <th bgcolor="#a0bbe6" scope="col">Id événement</th>
                                <th bgcolor="#a0bbe6" scope="col">Nom evenement</th>
                                <th bgcolor="#a0bbe6" scope="col">Description</th>
                                <th bgcolor="#a0bbe6" scope="col">Date evenement</th>
                                <!-- <th bgcolor="#a0bbe6" scope="col">Début evenement</th>
                                 <th bgcolor="#a0bbe6" scope="col">Fin evenement</th> -->

                                <th bgcolor="#a0bbe6" scope="col">Adresse</th>
                                <th bgcolor="#a0bbe6" scope="col">Image</th>
                                <th bgcolor="#a0bbe6" scope="col">Nom Club</th>
                                <th bgcolor="#a0bbe6" scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for evenement in evenements %}
                                <tr>
                                    <th scope="row">{{ evenement.id_event }}</th>
                                    <td>{{ evenement.event_name }}</td>
                                    <td >{{ evenement.description }}</td>
                                    <td>{{ evenement.event_date ? evenement.event_date|date('Y-m-d | H:i:s') : '' }}</td>
                                    {# <td>   {{ evenement.startingTime|date('H:i:s')}}</td>
                             <td>   {{ evenement.endingTime|date('H:i:s')}}</td> -->  #}

                                    <td >{{ evenement.adresse }}</td>

                                    <td><img src="{{ asset('AdminPart/images/' ~ evenement.image) }}"
                                             alt="" style="width:40px; height: 40px "></td>
                                    <td>{{ evenement.club }}</td>

                                    <td>
                                        <a href="{{ path('evenement_report', {'id_event': evenement.id_event}) }}">Reporter</a>  &nbsp;
                                        <a href="{{ path('evenement_show', {'id_event': evenement.id_event}) }}">Détails</a>  &nbsp;
                                        <a href="{{ path('evenement_edit', {'id_event': evenement.id_event}) }}">Modifier</a>
                                        <a href="{{ path('evenement_delete', {'id_event': evenement.id_event}) }}">Supprimer</a>&nbsp;



                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">Aucun évenement existant</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>



{% endblock %}
